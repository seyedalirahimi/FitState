<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.FitState" parent="android:Theme.Material.Light.NoActionBar" />


    <style name="Theme.FitState.Splash" parent="Theme.SplashScreen">
        <!-- Set the splash screen background color -->
        <item name="windowSplashScreenBackground">@color/purple_500</item>
        <!-- Set the splash screen icon -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <!-- Control icon animation duration -->
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <!-- Post-splash screen theme -->
        <item name="postSplashScreenTheme">@style/Theme.FitState</item>
    </style>
</resources>